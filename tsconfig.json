{
  "extends": "@mate-academy/students-ts-config",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "sourceMap": false,
    "types": ["node", "cypress"],
    "jsx": "react-jsx", // Указывает, что используется React 17+ с новой трансформацией JSX.
    "module": "ESNext", // Рекомендуется для React, особенно если используете ES-модули.
    "target": "ES6", // Устанавливает уровень синтаксиса ECMAScript.
  }
}
